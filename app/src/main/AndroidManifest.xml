<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".common.app.MyApplication"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Myrajouney"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Myrajouney.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".auth.OnboardingActivity" android:theme="@style/Theme.Myrajouney.FullScreen" />
        <activity android:name=".auth.LoginActivity" android:theme="@style/Theme.Myrajouney.FullScreen" />
        <activity android:name=".auth.ForgotPasswordActivity" android:theme="@style/Theme.Myrajouney.FullScreen" />

        <activity android:name=".patient.dashboard.PatientDashboardActivity" />
        <activity android:name=".doctor.dashboard.DoctorDashboardActivity" />
        <activity android:name=".admin.dashboard.AdminDashboardActivity" />

        <activity android:name=".admin.users.CreatePatientActivity" />
        <activity android:name=".admin.users.CreateDoctorActivity" />
        <activity android:name=".admin.users.EditPatientActivity" />
        <activity android:name=".admin.users.EditDoctorActivity" />
        <activity android:name=".admin.dashboard.SettingsActivity" />
        <activity android:name=".admin.logs.AllNotificationsActivity" />
        <activity android:name=".admin.meds.AllMedicationsActivity" />
        <activity android:name=".admin.rehab.AllRehabActivity" />
        <activity android:name=".admin.assignments.AssignPatientToDoctorActivity" />

        <activity android:name=".doctor.patients.AllPatientsActivity" />
        <activity android:name=".doctor.patients.PatientDetailsActivity" />
        <activity android:name=".doctor.appointments.DoctorScheduleActivity" />
        <activity android:name=".doctor.appointments.AppointmentDetailsActivity" />
        <activity android:name=".doctor.dashboard.HealthStatsActivity" />
        <activity android:name=".doctor.reports.DoctorReportsActivity" />

        <activity android:name=".patient.appointments.PatientAppointmentsActivity" />
        <activity android:name=".patient.symptoms.SymptomLogActivity" />
        <activity android:name=".patient.reports.UploadReportActivity" />
        <activity android:name=".patient.reports.ReportList" />
        <activity android:name=".patient.rehab.PatientRehabilitationActivity" />
        <activity android:name=".patient.medications.PatientMedicationsActivity" />
        <activity android:name=".patient.education.EducationHubActivity" />
        <activity android:name=".patient.education.ArticleViewerActivity" />

        <activity android:name=".common.appointments.AddAppointmentActivity" />

        <receiver android:name=".patient.medications.MedicationReminderReceiver"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name=".patient.medications.MarkMedicationTakenReceiver"
            android:enabled="true"
            android:exported="true" />

    </application>
</manifest>