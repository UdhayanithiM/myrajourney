<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assign Medication"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="#000" />

        <!-- Search -->
        <EditText
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search medications (or leave blank)"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="text" />

        <!-- Search Results -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_med_results"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="10dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D0D0"
            android:layout_marginTop="12dp" />

        <!-- Selected Med -->
        <TextView
            android:id="@+id/tv_selected_med"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected: (none)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="#000" />

        <!-- Custom Name -->
        <EditText
            android:id="@+id/et_name_override"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Or enter custom medication name"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="text" />

        <!-- Dosage + Frequency -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_dosage"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Dosage (10mg)"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext" />

            <EditText
                android:id="@+id/et_frequency_per_day"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Frequency (Morning/2/day)"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext" />
        </LinearLayout>

        <!-- Start / End Dates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="Start date"
                android:textColor="#444"
                android:background="@drawable/rounded_edittext" />

            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="End date (optional)"
                android:textColor="#444"
                android:background="@drawable/rounded_edittext" />
        </LinearLayout>

        <!-- Submission -->
        <Button
            android:id="@+id/btn_assign"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Assign Medication"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFF" />

    </LinearLayout>

</ScrollView>
