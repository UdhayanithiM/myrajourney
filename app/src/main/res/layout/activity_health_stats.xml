                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="36.5" android:textSize="28sp" android:textStyle="bold" android:textColor="#38A169"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="Â°C" android:textSize="12sp" android:alpha="0.7"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
