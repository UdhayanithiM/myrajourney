<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptom Log"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#299F9A"
            android:layout_marginBottom="20dp"/>

        <!-- Joint pain (VAS) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joint Pain (VAS Score 0–10)"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"/>

        <SeekBar
            android:id="@+id/vasSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <TextView
            android:id="@+id/vasValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VAS: 0"
            android:layout_marginBottom="20dp"/>

        <!-- No of joints involved -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Joints Involved"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/jointsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter number"
            android:layout_marginBottom="20dp"/>

        <!-- Morning stiffness -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Stiffness Duration"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:id="@+id/stiffnessGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/less30min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Less than 30 min"
                android:buttonTint="#299F9A"
                android:layout_marginEnd="20dp"/>

            <RadioButton
                android:id="@+id/more30min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More than 30 min"
                android:buttonTint="#299F9A"/>
        </RadioGroup>

        <!-- Fatigue -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatigue Level (0–10 FACIT)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>

        <SeekBar
            android:id="@+id/fatigueSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"/>

        <TextView
            android:id="@+id/fatigueValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatigue: 0"
            android:layout_marginBottom="20dp"/>

        <!-- Other symptoms -->
        <EditText
            android:id="@+id/otherSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other symptoms"
            android:layout_marginBottom="20dp"/>

        <!-- Notes -->
        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Notes"
            android:gravity="top"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="20dp"/>

        <!-- Submit button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Entry"
            android:backgroundTint="#E0F2F4"
            android:textColor="#000000"/>

    </LinearLayout>
</ScrollView>
