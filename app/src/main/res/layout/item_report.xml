<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Report Name (for patient reports) -->
        <TextView
            android:id="@+id/report_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"/>

        <!-- Patient Name (for doctor reports) -->
        <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"/>

        <!-- Report Type (for doctor reports) -->
        <TextView
            android:id="@+id/report_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Type"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"/>

        <!-- Report Date (for patient reports) -->
        <TextView
            android:id="@+id/report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"/>

        <!-- Report File (for patient reports) -->
        <TextView
            android:id="@+id/report_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"/>

        <!-- Date (alternative for doctor reports) -->
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone"/>

        <!-- Status (for doctor reports) -->
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:padding="8dp"
            android:background="@drawable/circle_background"
            android:visibility="gone"/>

        <!-- Report Status (for doctor reports) -->
        <TextView
            android:id="@+id/report_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:padding="8dp"
            android:background="@drawable/circle_background"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
