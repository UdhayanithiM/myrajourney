<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Top Bar Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topBarCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconMenu"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="menu"
                    android:src="@drawable/ic_menu"
                    android:tint="@color/primary_color"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Admin Dashboard"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="16dp"/>

                <ImageView
                    android:id="@+id/logoutBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@android:drawable/ic_menu_send"
                    android:contentDescription="Logout"
                    android:tint="@color/white"
                    android:background="@drawable/circle_background"
                    android:padding="8dp" />
            </LinearLayout>

            <SearchView
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:queryHint="Search patients or doctors..."
                android:iconifiedByDefault="false"
                android:background="@drawable/edit_text_background"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Illustration -->
    <ImageView
        android:id="@+id/imgIllustration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/admin_banner"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/topBarCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:contentDescription="Admin Banner"/>

    <!-- Action Buttons Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/actionsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgIllustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"/>

            <!-- Create New Patient Button -->
            <Button
                android:id="@+id/btnCreatePatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_primary"
                android:text="âž• Create New Patient"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp"/>

            <!-- Create New Doctor Button -->
            <Button
                android:id="@+id/btnCreateDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_secondary"
                android:text="âž• Create New Doctor"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp"/>

            <!-- Assign Patients Button -->
            <Button
                android:id="@+id/btnAssignPatients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_accent"
                android:text="ðŸ‘¥ Assign Patients to Doctors"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp"/>

            <!-- View All Patients Button -->
            <Button
                android:id="@+id/btnViewAllPatients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_outline"
                android:text="ðŸ“‹ View All Patients"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:textAllCaps="false"
                android:layout_marginBottom="12dp"/>

            <!-- View All Doctors Button -->
            <Button
                android:id="@+id/btnViewAllDoctors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_outline"
                android:text="ðŸ‘¨â€âš•ï¸ View All Doctors"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:background="@color/white">

            <!-- Update/Edit Patient -->
            <LinearLayout
                android:id="@+id/navUpdatePatient"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iconPatient"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_patient"
                    android:tint="@color/primary_color"
                    android:contentDescription="Patient"/>

                <TextView
                    android:id="@+id/tvUpdatePatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patients"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Update/Edit Doctor -->
            <LinearLayout
                android:id="@+id/navUpdateDoctor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iconDoctor"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_doctor"
                    android:tint="@color/primary_color"
                    android:contentDescription="Doctor"/>

                <TextView
                    android:id="@+id/tvUpdateDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctors"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/navSettings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iconSettings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/primary_color"
                    android:contentDescription="Settings"/>

                <TextView
                    android:id="@+id/tvSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
